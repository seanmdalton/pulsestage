{
  "name": "ama-api",
  "version": "0.4.0",
  "description": "PulseStage API - Ask Me Anything (AMA) platform for organizational engagement",
  "author": "Sean M. Dalton <seanmdalton@pm.me>",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives",
    "lint:fix": "eslint . --ext ts,js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-secrets": "node --loader ts-node/esm scripts/generate-secrets.ts",
    "preflight-check": "node --loader ts-node/esm scripts/preflight-check.ts",
    "email:dev": "email dev --dir src/emails",
    "db:push": "prisma db push",
    "db:seed": "node dist/seed-multi-tenant-data.js",
    "db:seed:teams": "node dist/seed-teams.js",
    "db:seed:tags": "node dist/seed-tags.js",
    "db:seed:demo": "node dist/seed-demo-data.js",
    "db:seed:full": "node dist/seed-multi-tenant-data.js && node dist/seed-tags.js",
    "db:seed:all": "node dist/seed-teams.js && node dist/seed-tags.js && node dist/seed-demo-data.js",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@prisma/engines": "^6.16.3",
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "@types/express-session": "^1.18.2",
    "bad-words": "^4.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.61.0",
    "compromise": "^14.14.4",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "csv-parse": "^6.1.0",
    "esbuild": "^0.25.11",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "openai": "^6.2.0",
    "react-email": "^4.3.0",
    "redis": "^5.8.2",
    "resend": "^6.1.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mdn/mdn-http-observatory": "^1.4.0",
    "@react-email/preview-server": "^4.3.0",
    "@types/bull": "^3.15.9",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "esbuild": "^0.25.11"
  }
}
