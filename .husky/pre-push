#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Run linting for both API and Web
echo "📝 Checking code quality..."
npm run lint

if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix the issues before pushing."
  exit 1
fi

echo "✅ All pre-push checks passed!"
